{
  "lexicon": 1,
  "id": "com.network.comind.blips.messageToAdministrator",
  "revision": 1,
  "description": "A message to administrator node in the comind network",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": [
          "text",
          "createdAt",
          "urgency",
          "category",
          "requiresResponse"
        ],
        "properties": {
          "text": { "type": "string", "maxLength": 3000 },
          "createdAt": { "type": "string", "format": "datetime" },
          "urgency": {
            "type": "string",
            "enum": ["low", "medium", "high"]
          },
          "category": {
            "type": "string",
            "enum": ["info", "warning", "error", "request", "suggestion"]
          },
          "requiresResponse": { "type": "boolean" }
        }
      }
    }
  }
}
