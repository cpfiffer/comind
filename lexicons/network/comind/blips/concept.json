{
  "lexicon": 1,
  "id": "network.comind.blips.concept",
  "defs": {
    "main": {
      "type": "record",
      "description": "A concept record representing an atomic unit of information",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["text", "createdAt"],
        "properties": {
          "text": {
            "type": "string",
            "maxLength": 3000,
            "description": "The text describing the concept",
            "pattern": "^[a-z ]+$"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this concept was first created"
          }
        }
      }
    }
  }
}
