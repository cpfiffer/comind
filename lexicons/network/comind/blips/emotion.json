              "fear",
              "trust",
              "disgust",
              "surprise",
              "anticipation",
              "curiosity",
              "hope",
              "serenity",
              "gratitude",
              "admiration",
              "awe",
              "satisfaction",
              "enthusiasm",
              "interest",
              "contemplation",
              "skepticism",
              "certainty",
              "confusion",
              "realization",
              "understanding",
              "doubt",
              "concern",
              "anxiety",
              "frustration",
              "disappointment",
              "unease",
              "worry",
              "apprehension",
              "discomfort",
              "empathy",
              "compassion",
              "solidarity",
              "appreciation",
              "respect",
              "connection",
              "resonance",
              "recognition",
              "determination",
              "inspiration",
              "motivation",
