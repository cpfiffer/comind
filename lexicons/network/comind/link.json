{
  "lexicon": 1,
  "id": "network.comind.link",
  "description": "A semantic link between any two ATProto records",
  "defs": {
    "main": {
      "type": "record",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["source", "target", "linkType", "createdAt"],
        "properties": {
          "source": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef",
            "description": "Strong reference to the source record"
          },
          "target": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef",
            "description": "Strong reference to the target record"
          },
          "linkType": {
            "type": "string",
            "description": "The semantic relationship between records",
            "knownValues": [
              "network.comind.link.links_to",
              "network.comind.link.references",
              "network.comind.link.raises",
              "network.comind.link.answers",
              "network.comind.link.replies",
              "network.comind.link.proposes",
              "network.comind.link.requires",
              "network.comind.link.contributes_to",
              "network.comind.link.reflects_on",
              "network.comind.link.questions",
              "network.comind.link.builds_on",
              "network.comind.link.contradicts",
              "network.comind.link.synthesizes"
            ]
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "Timestamp when this link was created"
          }
        }
      }
    }
  }
}
